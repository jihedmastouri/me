---
import ProjectCard from '@containers/ProjectCard.astro';
import projects from '../../data/projects.json';
const lenThird = Math.floor(projects.length / 3);
const half = Math.floor(projects.length / 2);
---

<section class="my-32 mx-2 w-full">
  <h2 class="my-8 text-center text-5xl">Projects I Worked On ðŸ«€</h2>
  <div class="max-2xl:hidden">
    <div class="flex flex-wrap justify-center gap-6">
      <div class="flex flex-col gap-6">
        {projects.slice(0, lenThird + 1).map((p, index) => <ProjectCard project={p} id={index} />)}
      </div>
      <div class="flex flex-col gap-6">
        {
          projects
            .slice(lenThird + 1, lenThird * 2 + 2)
            .map((p, index) => <ProjectCard project={p} id={index} />)
        }
      </div>
      <div class="flex flex-col gap-6">
        {projects.slice(lenThird * 2 + 2).map((p, index) => <ProjectCard project={p} id={index} />)}
      </div>
    </div>
  </div>
  <div class="2xl:hidden">
    <div class="flex flex-wrap justify-center gap-6">
      <div class="flex flex-col gap-6">
        {projects.slice(0, half).map((p, index) => <ProjectCard project={p} id={index} />)}
      </div>
      <div class="flex flex-col gap-6">
        {projects.slice(half).map((p, index) => <ProjectCard project={p} id={index} />)}
      </div>
    </div>
  </div>
</section>
